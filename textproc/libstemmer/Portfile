# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem 1.0

name		libstemmer
version		0.1
revision    svn-556
categories	textproc
platforms	darwin
maintainers	nomaintainer
description	Algorithmic Stemmer Library
		
fetch.type      svn
svn.url 	svn://snowball.tartarus.org/snowball/trunk
svn.revision    556
homepage	http://snowball.tartarus.org

worksrcdir       trunk/snowball/
use_configure    no
build.target     libstemmer.o
post-build {
      system "cd ${worksrcpath} && mv libstemmer.o libstemmer.a"
}

destroot {
    # install header files
    xinstall -m 755 -d ${destroot}${prefix}/include
    xinstall -m 644 -W ${worksrcpath}/include libstemmer.h ${destroot}${prefix}/include
    # install libraries
    xinstall -m 755 -d ${destroot}${prefix}/lib
    xinstall -m 644 -W ${worksrcpath} libstemmer.a ${destroot}${prefix}/lib
}

livecheck.type none
